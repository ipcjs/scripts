{
    "compilerOptions": {
        "allowJs": true,
        "composite": true,
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@common/*": ["../../common/*"],
        }
    },
    "include": ["src", "../../common"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}